{
  "manifest_version": 3,
  "name": "ProtechTech",
  "version": "0.1",
  "description": "Bloqueia ativamente sites de phishing e golpes usando uma blacklist atualizada e personaliz√°vel.",
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "phishing.json", "malware.json", "scam.json", "crypto.json", "bitcoin.json", "cryptojacking.json", "ddos.json", "fakenews.json", "hacking.json"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}